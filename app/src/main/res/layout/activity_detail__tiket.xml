<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Wisata.Detail_Wisata">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gambartiket1"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_gravity="center" />



        <TextView
            android:id="@+id/penjelasantiket1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:padding="12dp"
            android:text="penjelasan"
            android:textColor="#000000"
            android:textSize="23dp"
            android:textStyle="bold" />

        <Button
            android:background="@drawable/bggg"
            android:id="@+id/tikett"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:text="Click Here To Buy"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/gambartiket2"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/penjelasantiket2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:padding="12dp"
            android:text="penjelasan"
            android:textColor="#000000"
            android:textSize="23dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/tiket"
            android:background="@drawable/bggg"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:text="Click Here To Buy"
            android:textColor="#000000"/>


    </LinearLayout>



</ScrollView>